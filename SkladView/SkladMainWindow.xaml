<Window x:Class="Elena.SkladView.SkladMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elena.SkladView"
        mc:Ignorable="d"
        Title="SkladMainWindow" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Image gif:ImageBehavior.AnimatedSource="../Images/bongocat-funny.gif"/>
        <Button Name="typeOfProducts" Content="Типы товаров" Grid.Column="1" Margin="20,0,20,0" Click="typeOfProducts_Click"/>
        <Button Name="products" Content="Товары" Grid.Column="2" Margin="20,0,20,0" Click="products_Click"/>
        <Button Name="exit" Content="Выйти" Grid.Column="3" Margin="20,0,20,0" Click="exit_Click"/>
        <Frame Name="Frame" Grid.Row="1" Grid.ColumnSpan="4" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
